<form class="form-horizontal" role="role">
    <fieldset>
        <div id="legend">
            <legend class="">Register</legend>
        </div>

        <div class="form-group">
            <!-- Username -->
            <label class="col-lg-1 control-label"  for="username">Username</label>
            <div class="col-lg-3">
                <input type="text" class="form-control" id="username" name="username">
                <p class="help-block">Username can contain any letters or numbers, without spaces</p>
            </div>
        </div>

        <div class="form-group">
            <!-- E-mail -->
            <label class="col-lg-1 control-label" for="email">E-mail</label>
            <div class="col-lg-3">
                <input type="text" class="form-control" id="email" name="email">
                <p class="help-block">Please provide your E-mail</p>
            </div>
        </div>

        <div class="form-group">
            <!-- Password -->
            <label class="col-lg-1 control-label" for="password">Password</label>
            <div class="col-lg-3">
                <input type="password" class="form-control" id="password" name="password">
                <p class="help-block">Password should be at least 4 characters</p>
            </div>
        </div>

        <div class="form-group">
            <!-- Password -->
            <label class="col-lg-1 control-label"  for="password_confirm">Password (Confirm)</label>
            <div class="col-lg-3">
                <input type="password" class="form-control" id="password_confirm" name="password_confirm">
                <p class="help-block">Please confirm password</p>
            </div>
        </div>

        <div class="form-group">
            <!-- Button -->
            <div class="col-lg-offset-1">
                <button class="btn btn-success">Register</button>
            </div>
        </div>

        <div class="form-group">
            <!-- Link to sign up -->
            <label class="col-lg-offset-1 control-label">
                Already registered? {{#linkTo 'welcome.login'}}Login here{{/linkTo}}
            </label>
        </div>
    </fieldset>
</form>
<form class="form-horizontal" role="form" {{action login on='submit'}}>
    <fieldset>
        <div id="legend">
            <legend>Login</legend>
        </div>
        <div class="form-group">
            <!-- Username -->
            <label class="col-lg-1 control-label" for="username">Username</label>
            <div class="col-lg-3">
                {{input value=username type="text"  class="form-control" id="username" name="username"}}
            </div>
        </div>

        <div class="form-group">
            <!-- Password -->
            <label class="col-lg-1 control-label" for="password">Password</label>
            <div class="col-lg-3">
                {{input value=password type="password" class="form-control" id="password" name="password"}}
            </div>
        </div>

        <div class="form-group">
            <!-- Button -->
            <div class="col-lg-offset-1">
              {{input type="submit" class="btn btn-success" value="Log In"}}
            </div>
        </div>

        {{#if errorMessage}}
            <div class="alert alert-error">
                {{errorMessage}}
            </div>
        {{/if}}

        <div class="form-group">
            <!-- Link to sign up -->
            <label class="col-lg-offset-1 control-label">
                Not a member? {{#linkTo 'welcome.signup'}}Sign up here{{/linkTo}}
            </label>
        </div>
    </fieldset>
</form>